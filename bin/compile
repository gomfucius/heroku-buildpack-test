#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

BUILD_DIR=$1
CACHE_DIR=$2

cd $BUILD_DIR

set -e
set -o pipefail
echo "Hi dayo 1"
echo $BUILD_DIR
mkdir -p "$CACHE_DIR"
echo $CACHE_DIR

cd $CACHE_DIR

echo "Hi dayo 2"

# 1- Configuration
mkdir -p /staging && cd /staging

#apt-get build-dep --assume-yes curl


# 2- Install libnghhtp2
git clone https://github.com/nghttp2/nghttp2
cd nghttp2
autoreconf -i
automake
autoconf
./configure --enable-lib-only --prefix=/usr/
make
make install

# 3- Install libcurl and curl
cd $BUILD_DIR
wget https://curl.haxx.se/download/curl-7.51.0.tar.gz
tar -zxf curl-7.51.0.tar.gz
cd curl-7.51.0
./configure --prefix=/usr --with-nghttp2=/usr --with-ssl
make
make install
ldconfig

# 4- Cleanup
###cd / && rm -rf /staging

